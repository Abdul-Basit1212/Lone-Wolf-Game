#ifndef GAMEDATA_H
#define GAMEDATA_H

#include <string>
#include <vector>
#include <iostream>

// ==========================================
// SHARED ENUMS
// ==========================================
enum ItemType { FOOD, HERB, TOOL, WEAPON };
enum WolfRole { HUNTER, SCOUT, GUARD };

// ==========================================
// CORE STRUCTS
// ==========================================

// 1. WOLF STATS
struct WolfStats {
    int health = 100;
    int hunger = 0;
    int energy = 100;
    int reputation = 0;
    int dayCount = 1;
};

// 2. ITEM DEFINITION
struct Item {
    std::string name;
    ItemType type;
    int effectValue;
    int quantity;
    
    Item(std::string n, ItemType t, int e, int q) 
        : name(n), type(t), effectValue(e), quantity(q) {}
    Item() {}
};

// 3. STORY NODE (Moved Global so GUI can see it)
// We use a typedef so "Option" is just a pair (Button Text, Next Node ID)
typedef std::pair<std::string, int> Option; 

struct StoryNode {
    int id;
    std::string text; // KEEPING NAME 'text'
    
    int healthChange = 0;
    int energyChange = 0;
    int hungerChange = 0;
    int reputationChange = 0;
    int dayChange = 0;

    std::string requiredItem = "None";
    std::string rewardItem = "None";

    // Pair<ButtonText, NextNodeID>
    std::vector<Option> children; // KEEPING NAME 'children'

    StoryNode(int _id, std::string _text) : id(_id), text(_text) {}
    StoryNode() {} 
};

#endif
